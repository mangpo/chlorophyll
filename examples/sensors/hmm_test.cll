fix9_t::3@(6,6,6) dir_filter_ref;

int filter(fix9_t::3@(5,5,5) acc_in){

  // node 5
  fix9_t@6 abs;
  abs = acc_in::0 *@5 acc_in::0 +@5 acc_in::1 *@5 acc_in::1 +@5 acc_in::2 *@5 acc_in::2;

  // node 6
  int@6 ret2;
  fix9_t::3@(6,6,6) acc2;
  acc2 = acc_in;

  ret2 = 0;
  if (abs >@6 1.1){
    ret2 = 1;
  }
  if (abs <@6 0.9){
      ret2 = 1;
  }

  // node 4
  int@4 ret;
  ret = ret2;
  //fix9_t idle_sensitivity = 0.1;//0.3;
  fix9_t@4 def_sensitivity;
  def_sensitivity = 0.4;//0.5;

  fix9_t::3@(4,4,4) acc;
  acc = acc_in;

  if (ret){
    ret = 0;
    if (acc::0 <@4 dir_filter_ref::0 -@4 def_sensitivity){
      ret = 1;
    }
    if (acc::0 >@4 dir_filter_ref::0 +@4 def_sensitivity){
      ret = 1;
    }
    if (acc::1 <@4 dir_filter_ref::1 -@4 def_sensitivity){
      ret = 1;
    }
    if (acc::1 >@4 dir_filter_ref::1 +@4 def_sensitivity){
      ret = 1;
    }
    if (acc::2 <@4 dir_filter_ref::2 -@4 def_sensitivity){
      ret = 1;
    }
    if (acc::2 >@4 dir_filter_ref::2 +@4 def_sensitivity){
      ret = 1;
    }
  }

  // node 6
  ret2 = ret;
  if (ret2){
    dir_filter_ref = acc2;                 
  }

  return ret;
}

void input_reading(fix9_t::3@(3,3,3) acc){
  //input the next accelerometer reading
  int ord;
  int@0 o1;
  int@1 o2;
  ord = 0;
  if (filter(acc)){
    ord = ord | o1;
  }
  
   int n;
   n = 0;
   while (ord > 0){
     n = n + 1;
     ord = ord << 1;
   }
}

void main(){
  fix9_t::3 acc;
  input_reading(acc);
}
